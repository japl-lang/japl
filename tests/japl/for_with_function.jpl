
var y = 0; //a global to keep track of state
//does not need closures for this to work yet

fun next(x) {
    if (x == 0) {
        y = y + 1;
        x = 0;
    }
    if (y == 10)
        return -1;
    return x+y+1;
}

for (var i = 0; i != -1; i = next(i))
    print(i);
